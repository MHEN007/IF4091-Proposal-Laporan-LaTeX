% Daftar Lampiran
\newcommand{\listappendixname}{\MakeUppercase{Daftar Lampiran}}
\newlistof{appendix}{app}{\listappendixname}

\newcommand{\appendixchapter}[1]{
    \refstepcounter{chapter}
    \chapter*{\appendixname~\thechapter.~#1}
    \addcontentsline{app}{appendix}{\protect\bfseries\MakeUppercase{\appendixname~\numberline{\thechapter.}#1}}\par
}

\newcommand{\appendixsection}[1]{
    \refstepcounter{section}
    \section*{\thesection.~#1}
    \addcontentsline{app}{appendix}{\protect\hspace{1.5em}\thesection\quad#1}\par
}

